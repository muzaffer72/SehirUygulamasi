  // İstatistik tipi için ikon döndürür
  IconData _getIconForStatType(String type) {
    switch (type.toLowerCase()) {
      case 'demografi':
      case 'nufus':
        return Icons.people;
      case 'egitim':
        return Icons.school;
      case 'ekonomi':
        return Icons.attach_money;
      case 'altyapi':
        return Icons.build;
      case 'ulasim':
        return Icons.directions_bus;
      case 'yesilalan':
      case 'cevre':
        return Icons.park;
      case 'su':
        return Icons.water_drop;
      default:
        return Icons.info;
    }
  }

