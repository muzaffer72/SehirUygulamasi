modules = ["flutter", "php", "nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Admin Panel Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Database Setup"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter App Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Test App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Main App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ŞikayetVar Konum Test"

[[workflows.workflow]]
name = "Admin Panel Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd admin-panel && php -S 0.0.0.0:5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Database Setup"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx ts-node push-db.ts"

[[workflows.workflow]]
name = "Flutter App Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd . && flutter run -d web-server --web-port=5001 --web-hostname=0.0.0.0"
waitForPort = 5001

[[workflows.workflow]]
name = "Flutter Test App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd . && flutter run -d web-server --web-port=5001 --web-hostname=0.0.0.0 -t test_flutter_app.dart"
waitForPort = 5001

[[workflows.workflow]]
name = "Flutter Main App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd . && flutter run -d web-server --web-port=5002 --web-hostname=0.0.0.0 -t lib/main.dart"
waitForPort = 5002

[[workflows.workflow]]
name = "ŞikayetVar Konum Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd . && flutter run -d web-server --web-port=5002 --web-hostname=0.0.0.0 -t sikayetvar_location_test.dart"
waitForPort = 5002

[deployment]
run = ["sh", "-c", "cd . && flutter run -d web-server --web-port=5001 --web-hostname=0.0.0.0"]

[[ports]]
localPort = 3000
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 5000

[[ports]]
localPort = 5002
externalPort = 3002

[[ports]]
localPort = 39141
externalPort = 3000
