modules = ["flutter", "php", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter App Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Admin Panel Server"

[[workflows.workflow]]
name = "Flutter App Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flutter run -d web-server --web-port=5001 --web-hostname=0.0.0.0"
waitForPort = 5001

[[workflows.workflow]]
name = "Admin Panel Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd admin-panel && php -S 0.0.0.0:5000"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "flutter run -d web-server --web-port=5001 --web-hostname=0.0.0.0"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000
